{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016", // Specifies the version of ECMAScript (JavaScript) for which TypeScript code will be compiled
    "jsx": "preserve", // "preserve" means that TypeScript will preserve the JSX syntax without transforming it.                  
    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, // Indicates the preferred use of universal case for filenames and imports. They gotta be same
    /* Type Checking */
    // "strict": true, // strict checking of types
    // "skipLibCheck": true // its turns off checking of types for files in node-modules.
  },
  "include": [
    "src",
    "src/typings.d.ts"
  ]
}